<div id="ability-scores">

    <div class="row">
        <div class="col-sm-12">
            <h2><input type="button" id="ability-score-header" value="Ability Scores" data-toggle="modal" data-target="#test-modal"/></h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-3 col-sm-9">
            <label>Ability<br />Score</label>
            <label>Ability<br />Mod</label>
            <label>Temp<br />Score</label>
            <label>Temp<br />Mod</label>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-3">
            <input type="button" value="STR" data-toggle="modal" data-target="#test-modal"/>
        </div>
        <div class="col-sm-9">
            <input type="text" value="@ContentModel.character.Strength_Score" disabled />
            <input type="text" value="@ContentModel.character.Strength_Modifier" disabled />
            <input type="text" disabled />
            <input type="text" disabled />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="button" value="DEX" data-toggle="modal" data-target="#test-modal"/>
        </div>
        <div class="col-sm-9">
            <input type="text" value="@ContentModel.character.Dexterity_Score" disabled />
            <input type="text" value="@ContentModel.character.Dexterity_Modifier" disabled />
            <input type="text" disabled />
            <input type="text" disabled />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="button" value="CON" data-toggle="modal" data-target="#test-modal"/>
        </div>
        <div class="col-sm-9">
            <input type="text" value="@ContentModel.character.Constitution_Score" disabled />
            <input type="text" value="@ContentModel.character.Constitution_Modifier" disabled />
            <input type="text" disabled />
            <input type="text" disabled />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="button" value="INT" data-toggle="modal" data-target="#test-modal"/>
        </div>
        <div class="col-sm-9">
            <input type="text" value="@ContentModel.character.Intelligence_Score" disabled />
            <input type="text" value="@ContentModel.character.Intelligence_Modifier" disabled />
            <input type="text" disabled />
            <input type="text" disabled />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="button" value="WIS" data-toggle="modal" data-target="#test-modal"/>
        </div>
        <div class="col-sm-9">
            <input type="text" value="@ContentModel.character.Wisdom_Score" disabled />
            <input type="text" value="@ContentModel.character.Wisdom_Modifier" disabled />
            <input type="text" disabled />
            <input type="text" disabled />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <input type="button" value="CHA" data-toggle="modal" data-target="#test-modal"/>
        </div>
        <div class="col-sm-9">
            <input type="text" value="@ContentModel.character.Charisma_Score" disabled />
            <input type="text" value="@ContentModel.character.Charisma_Modifier" disabled />
            <input type="text" disabled />
            <input type="text" disabled />
        </div>
    </div>
</div>

<div class="modal" id="test-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">Ability Scores</h2>
            </div>
            <div class="modal-body">
                <form action="@Url.Action("SetScores", "SectionController")" method="post">
                    <label style="width: 150px">Strength</label>
                    <input id="Strength" type="number" max="18" min="3" value="@ContentModel.character.Base_Strength_Score" />
                    <label>+@ContentModel.character.Race.Strength_Bonus</label>
                    <br />

                    <label style="width: 150px">Dexterity</label>
                    <input id="Dexterity" type="number" max="18" min="3" value="@ContentModel.character.Base_Dexterity_Score" />
                    <label>+@ContentModel.character.Race.Dexterity_Bonus</label>
                    <br />

                    <label style="width: 150px">Constitution</label>
                    <input id="Constitution" type="number" max="18" min="3" value="@ContentModel.character.Base_Constitution_Score" />
                    <label>+@ContentModel.character.Race.Constitution_Bonus</label>
                    <br />

                    <label style="width: 150px">Intelligence</label>
                    <input id="Intelligence" type="number" max="18" min="3" value="@ContentModel.character.Base_Intelligence_Score" />
                    <label>+@ContentModel.character.Race.Intelligence_Bonus</label>
                    <br />

                    <label style="width: 150px">Wisdom</label>
                    <input id="Wisdom" type="number" max="18" min="3" value="@ContentModel.character.Base_Wisdom_Score" />
                    <label>+@ContentModel.character.Race.Wisdom_Bonus</label>
                    <br />

                    <label style="width: 150px">Charisma</label>
                    <input id="Charisma" type="number" max="18" min="3" value="@ContentModel.character.Base_Charisma_Score" />
                    <label>+@ContentModel.character.Race.Charisma_Bonus</label>
                    <br />
                </form>
                <br />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="SetScores()">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>